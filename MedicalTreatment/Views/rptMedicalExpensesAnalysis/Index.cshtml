@{
    ViewBag.Title = "تقرير";
}

<div class="title-header">
    <h4 class="d-flex justify-content-center "><i class="mx-2 my-auto fa fa-hand-holding-medical"></i> الصرف حسب الأدارة فى كل شركة</h4>
</div>
<fieldset class="card p-4 shadow">
    <legend class="bg-custom shadow  px-3">تقرير</legend>
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-3">
            <div class="editor-label">
                من تاريخ
            </div>
            <div class="editor-field">
                @Html.TextBox("InFromDate", "", new { @class = "form-control", @id = "InFromDate", @type = "Date" })
            </div>
        </div>
        <div class="col-md-3">
            <div class="editor-label">
                الى تاريخ
            </div>
            <div class="editor-field">
                @Html.TextBox("InToDate", "", new { @class = "form-control", @id = "InToDate", @type = "Date" })
            </div>
        </div>
        <div class="col-md-3"></div>
    </div>

    <p class="mt-3">
        <input type="button" value="طباعة" onclick=" GenerateReport(); " class="btn btn-warning hvr-bounce-out" />

        <a href="/rptMedicalExpensesAnalysis/Index" class="btn btn-outline-info">عودة للقائمة</a>

    </p>
</fieldset>




@section scripts{
    <script type="text/javascript">

        $(document).ready(function () {
            $("#rdnExport > .pdsa-radiobutton").on('click', function () {
                pdsaToggleRadioButtons("#rdnExport", $(this));
            });
        });


        function GenerateReport() {
            debugger
            var InFromDate = $('#InFromDate').val();
            var InToDate = $('#InToDate').val();
           
            var link = "/rptMedicalExpensesAnalysis/GetReport/?InToDate=" + InToDate + "&InFromDate=" + InFromDate;
            window.open(link, 'mywindow', 'fullscreen=yes, scrollbars=auto');

        }




    </script>
}