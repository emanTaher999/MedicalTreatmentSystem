@model MedicalTreatment.Models.STRUCTURECODE

@{
    Layout = "~/Views/Shared/_LayoutAr.cshtml";
    ViewBag.Title = "Create";
}

<div class="title-header">
    <h4 class="d-flex justify-content-center "><i class="mx-2 my-auto fa fa-hand-holding-medical"></i> هيكل المؤسسة</h4>
</div>
<br />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
<fieldset class="card p-4 shadow">
    <legend class="bg-custom shadow  px-3">إضافة</legend>
    <div class="row my-2">

        <div class="col-md-4">
            @Html.Label("الاسم")
            <div>
                @Html.TextBoxFor(model => model.NAME, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.NAME)
            </div>
        </div>
        <div class="col-md-4">
            @Html.Label("الاسم بالانجليزية")
            <div>
                @Html.TextBoxFor(model => model.NAMEEN, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.NAMEEN)
            </div>
        </div>


        <div class="col-md-4">
            @Html.Label("تسلسل الهيكل")
            <div>
                @Html.TextBoxFor(model => model.STRUCTURESEQUENCE, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.STRUCTURESEQUENCE)
            </div>
        </div>
        <br />
        <p class="mt-3">
            <input type="submit" class="btn btn-primary" value="حفظ" />

            <a href="/StructureCodes/Index" class="btn btn-outline-info">عودة للقائمة</a>
        </p>

    </div>

    

</fieldset>
        }



        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
