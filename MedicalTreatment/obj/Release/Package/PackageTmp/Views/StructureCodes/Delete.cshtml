@model MedicalTreatment.Models.STRUCTURECODE

@{
    ViewBag.Title = "Delete";
}

<div class="title-header">
    <h4 class="d-flex justify-content-center "><i class="mx-2 my-auto fa fa-hand-holding-medical"></i> هيكل المؤسسة</h4>
</div>
<br />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <fieldset class="card p-4 shadow">
        <legend class="bg-custom shadow  px-3">حذف</legend>
        <div class="row my-2">
            <div class="col-md-4">
                @Html.Label("الاسم")
                <div>
                    @Html.TextBoxFor(model => model.NAME, new { @class = "form-control", @disabled = "disabled" })
                    @Html.ValidationMessageFor(model => model.NAME)
                </div>
            </div>
            <div class="col-md-4">
                @Html.Label("الاسم بالانجليزية")
                <div>
                    @Html.TextBoxFor(model => model.NAMEEN, new { @class = "form-control", @disabled = "disabled" })
                    @Html.ValidationMessageFor(model => model.NAMEEN)
                </div>
            </div>


            <div class="col-md-4">
                @Html.Label("تسلسل الهيكل")
                <div>
                    @Html.TextBoxFor(model => model.STRUCTURESEQUENCE, new { @class = "form-control", @disabled = "disabled" })
                    @Html.ValidationMessageFor(model => model.STRUCTURESEQUENCE)
                </div>
            </div>
            @Html.HiddenFor(model => model.STATUS)
            @Html.HiddenFor(model => model.LASTUPDATED)
        </div>

        <p class="mt-3">
            <input type="submit" class="btn btn-success" value="حذف" />

            <a href="/StructureCodes/Index" class="btn btn-outline-info">عودة للقائمة</a>
        </p>




    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

