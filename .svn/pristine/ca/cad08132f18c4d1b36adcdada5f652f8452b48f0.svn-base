legend {
    display: block;
    width: auto !important;
    max-width: 100%;
    padding: 0;
    background: #fff !important;
    margin-bottom: 0.5rem;
    border-radius: 5px !important;
    font-size: 1.5rem;
    line-height: inherit;
    color: inherit;
    /* white-space: normal; */
}
.bg-gradient-primary {
    background-color: #4a7d91;
    background-image: linear-gradient(180deg,#4a7d91 10%,#4a7d91 100%) !important;
    background-size: cover !important;
}

.table .thead-dark th {
    color: #fff;
    background-color: #4a7d91 !important;
    border-color: #ffffff !important;
}
