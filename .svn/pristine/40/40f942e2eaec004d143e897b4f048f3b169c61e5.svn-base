legend {
    display: block;
    width: auto !important;
    max-width: 100%;
    padding: 0;
    background: #fff !important;
    margin-bottom: 0.5rem;
    border-radius: 5px !important;
    font-size: 1.5rem;
    line-height: inherit;
    color: inherit;
    /* white-space: normal; */
}
.bg-gradient-primary {
    background-color: #4a7d91;
    background-image: linear-gradient(180deg,#4a7d91 10%,#4a7d91 100%) !important;
    background-size: cover !important;
}

.table .thead-dark th {
    color: #fff;
    background-color: #4a7d91 !important;
    border-color: #ffffff !important;
}
.title-header h2 {
    color: #4a7d91 !important;
}



 .title-header i {
        color: #4a7d91 !important;
    }
#card-details {
    width: 542px;
    background-image: url('img/cardbg2.jpg');
    background-size : cover;
    /*background: #e0fcff;*/
}

.shadow {
    box-shadow: 0px 10px 15px #ddd;
}
@media print {


    .shadow {
        box-shadow: 0px 0px 0px #fff !important;
        -webkit-box-shadow: 0px 0px 0px #fff !important;
    }
}
@media print {
    #card-details {
        width: 542px !important;
        background: #e0fcff !important;
        -webkit-print-color-adjust: exact;
        /*height: 205px;*/
    }
}
@media print {
    .hidden-area {
        visibility: hidden;
        display: none !important;
    }
}
